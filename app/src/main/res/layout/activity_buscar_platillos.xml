<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Buscar_platillos">

    <LinearLayout
        android:id="@+id/fondofinal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/fondo_final"
        android:orientation="horizontal"
        android:padding="50dp"
        android:scaleType="centerCrop"
        tools:visibility="visible">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:text=" "
            android:textColorHighlight="#00FFFFFF"
            android:textColorLink="#00FFFFFF"
            app:icon="@drawable/baseline_arrow_back_24"
            app:iconTint="#00235E"
            android:contentDescription="aaa"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="Buscar"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Entradas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingVertical="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="199dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:src="@drawable/comidauno"
            android:contentDescription="aaaaaa"/>

        <ImageButton
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:src="@drawable/comidados"
            android:contentDescription="aaaaaa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Entradas"
            android:textColor="#00235E"
            android:textStyle="bold"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bebidas"
            android:textColor="#00235E"
            android:textStyle="bold"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/imageView4"
            android:layout_width="199dp"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:src="@drawable/comidatres"
            android:contentDescription="aaaaaa"/>
        <ImageButton
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            android:src="@drawable/comidacuatro"
            android:contentDescription="aaaaaa"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:text="Cupcake"
            android:textColor="#00235E"
            android:textStyle="bold"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fruta"
            android:textColor="#00235E"
            android:textStyle="bold"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- home abajo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="50dp">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/home"
            android:contentDescription="aaaaaa"/>

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/perfil"
            android:contentDescription="aaaaaa"/>

        <ImageButton
            android:id="@+id/imageButton3"
            style="#033FA6"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/lupa"
            app:tint="#00235E"
            android:contentDescription="aaaaaa"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>